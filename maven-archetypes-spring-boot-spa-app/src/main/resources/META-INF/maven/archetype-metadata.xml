<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.1.0
        https://maven.apache.org/xsd/archetype-descriptor-1.1.0.xsd"
	xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.1.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	name="maven-archetype-spring-boot-angular-app">
	<requiredProperties>
		<requiredProperty key="spaType">
			<defaultValue>angular</defaultValue>
		</requiredProperty>
	</requiredProperties>
	<fileSets>
		<fileSet filtered="true" packaged="true" encoding="UTF-8">
			<directory>backend/src/main/java</directory>
			<includes>
				<include>**/*.java</include>
			</includes>
		</fileSet>
		<fileSet filtered="false" packaged="false" encoding="UTF-8">
			<directory>backend/src/main/resources</directory>
			<includes>
				<include>**/*.yml</include>
				<include>**/*.sql</include>
				<include>**/*.ldif</include>
			</includes>
		</fileSet>
		<fileSet filtered="true" packaged="true" encoding="UTF-8">
			<directory>backend/src/test/java</directory>
			<includes>
				<include>**/*.java</include>
			</includes>
		</fileSet>

		<fileSet filtered="true" packaged="false" encoding="UTF-8">
			<directory>frontend/</directory>
			<includes>
				<include>**/*.json</include>
				<include>**/*.md</include>
				<include>**/*.html</include>
				<include>**/*.ts</include>
				<include>**/*.js</include>
			</includes>
		</fileSet>

		<fileSet filtered="true" packaged="false" encoding="UTF-8">
			<directory></directory>
			<includes>
				<include>README.md</include>
				<include>pom.xml</include>
			</includes>
		</fileSet>
		<fileSet filtered="true" packaged="false" encoding="UTF-8">
			<directory>backend</directory>
			<includes>
				<include>README.md</include>
				<include>pom.xml</include>
				<include>keystore.xml</include>
			</includes>
		</fileSet>
		<fileSet filtered="true" packaged="false" encoding="UTF-8">
			<directory>frontend</directory>
			<includes>
				<include>README.md</include>
				<include>pom.xml</include>
			</includes>
		</fileSet>

		<fileSet filtered="false" packaged="false" encoding="UTF-8">
			<directory></directory>
			<includes>
				<include>.gitignore</include>
			</includes>
		</fileSet>

		<fileSet filtered="false" packaged="false" encoding="UTF-8">
			<directory></directory>
			<includes>
				<include>mvnw</include>
				<include>mvnw.cmd</include>
			</includes>
		</fileSet>
		<fileSet filtered="false" packaged="false" encoding="UTF-8">
			<directory>.mvn</directory>
		</fileSet>
	</fileSets>
</archetype-descriptor>
