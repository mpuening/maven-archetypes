{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */

    "target": "es2016",
    "lib": ["es6"], 

    "module": "commonjs",
    "rootDir": "src", 
    "resolveJsonModule": true,

    "allowJs": true, 

    "outDir": "build",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "noImplicitAny": true,

    "skipLibCheck": true 
  },
  "include": [
    "src/"
  ]
}
